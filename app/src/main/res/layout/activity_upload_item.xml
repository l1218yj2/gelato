<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/app_bar_main" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/containerCamera"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@color/grey_200">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerInParent="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:src="@drawable/ic_photo_album_black_24dp" />

                <ImageView
                    android:id="@+id/imgvCamera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="72dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imgvPortrait"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나의 마니또"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/txtvTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text=""
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/txtvMission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="52dp"
                    android:text="선물하기"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtvContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="선물하기"
                    android:textSize="16sp" />


                <EditText
                    android:id="@+id/etxtMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="72dp"
                    android:hint="전달할 메세지를 입력하세요." />

            </LinearLayout>
        </LinearLayout>
</LinearLayout>